{
  "name": "utils",
  "description": "Utils 文件结构规范",
  "exampleFile": "utils-example.js",

  "sections": [
    { "name": "Formatters", "alias": "格式化", "prefixes": ["format", "mask", "truncate", "capitalize"] },
    { "name": "Validators", "alias": "验证", "prefixes": ["isValid", "is", "has", "can", "validate", "passwords"] },
    { "name": "Transformers", "alias": "转换", "prefixes": ["to", "parse", "safe", "deep", "build", "camel", "snake", "get", "set"] },
    { "name": "Collections", "alias": "集合", "prefixes": ["unique", "groupBy", "sortBy", "pick", "omit", "shuffle", "getRandom"] },
    { "name": "Performance", "alias": "性能", "prefixes": ["debounce", "throttle", "memoize", "sleep"] },
    { "name": "Storage", "alias": "存储", "prefixes": ["getStorage", "setStorage", "removeStorage", "clearStorage", "hasStorage", "getSession", "setSession", "removeSession", "clearSession", "saveDraft", "loadDraft", "removeDraft", "hasDraft"] },
    { "name": "DOM", "alias": "DOM操作", "prefixes": ["scrollTo", "download", "copyTo", "isInViewport"] },
    { "name": "Misc", "alias": "通用", "prefixes": ["cn", "generateId", "getInitials", "getFile", "getMax"] }
  ],

  "forbidden": {
    "imports": ["axios", "fetch", "zustand", "redux", "react"],
    "patterns": ["setState", "useEffect", "useState"]
  },

  "codeStyle": {
    "functionKeyword": true,
    "nullCheck": true,
    "singleLineComment": true,
    "noInternalComments": true,
    "indent": 2
  },

  "rules": [
    "必须处理边界情况 (null/undefined)",
    "不包含业务逻辑、API调用"
  ]
}
