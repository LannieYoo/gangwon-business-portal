{
  "name": "i18n",
  "description": "国际化文件规范",

  "locales": ["ko", "zh"],
  "defaultLocale": "ko",

  "structure": {
    "format": "json",
    "nested": true,
    "maxDepth": 3
  },

  "naming": {
    "keyStyle": "camelCase",
    "sectionStyle": "camelCase"
  },

  "required": {
    "sections": ["common", "error", "validation"]
  },

  "forbidden": {
    "emptyValues": true,
    "duplicateKeys": true
  },

  "rules": [
    "所有语言文件必须有相同的 key 结构",
    "key 使用 camelCase 命名",
    "不允许空值",
    "不允许重复 key"
  ]
}
