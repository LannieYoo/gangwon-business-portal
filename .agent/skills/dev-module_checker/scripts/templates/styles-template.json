{
  "name": "styles",
  "description": "CSS/Tailwind 样式文件规范",

  "sections": [
    { "name": "base", "alias": "基础样式", "description": "@layer base 中的全局样式" },
    { "name": "components", "alias": "组件样式", "description": "@layer components 中的可复用组件" },
    { "name": "utilities", "alias": "工具类", "description": "@layer utilities 中的自定义工具类" }
  ],

  "required": {
    "imports": ["@tailwind base", "@tailwind components", "@tailwind utilities"],
    "layers": ["base", "components"]
  },

  "forbidden": {
    "patterns": ["!important", "position: fixed", "z-index: 9999"],
    "hardcodedColors": true,
    "hardcodedSpacing": true
  },

  "naming": {
    "componentPrefix": ["btn-", "card-", "form-", "modal-", "nav-", "error-", "table-", "badge-"],
    "caseStyle": "kebab-case"
  },

  "codeStyle": {
    "indent": 2,
    "maxSelectorDepth": 3,
    "preferApply": true,
    "noInlineStyles": true,
    "requireFileComment": true,
    "requireSectionComment": true
  },

  "rules": [
    "使用 Tailwind @apply 指令而非原生 CSS",
    "颜色使用 Tailwind 配置的语义化颜色",
    "间距使用 Tailwind 的 spacing scale",
    "避免使用 !important",
    "组件类名使用 kebab-case",
    "按 @layer 分组组织样式"
  ]
}
