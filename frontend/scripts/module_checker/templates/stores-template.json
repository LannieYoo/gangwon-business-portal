{
  "name": "stores",
  "description": "Zustand Store 文件规范",
  "exampleFile": "stores-example.js",

  "required": {
    "imports": ["zustand", "devtools"]
  },

  "naming": {
    "storePrefix": "use",
    "storeSuffix": "Store",
    "actionPrefixes": ["set", "clear", "toggle", "reset", "add", "remove", "update", "fetch", "load", "logout", "login"]
  },

  "structure": {
    "useDevtools": true,
    "hasStoreName": true
  },

  "forbidden": {
    "patterns": ["console.log", "debugger"],
    "serviceImports": true
  },

  "codeStyle": {
    "singleLineComment": true,
    "requireSectionComment": true,
    "actionLabel": true,
    "indent": 2
  },

  "rules": [
    "Store 命名必须以 use 开头，Store 结尾",
    "必须使用 devtools middleware",
    "Action 命名使用规范前缀",
    "每个 set() 调用必须有 devtools 标签",
    "使用单行中文注释",
    "每个 store 前需要分隔注释",
    "禁止在 store 中直接调用 API"
  ]
}
